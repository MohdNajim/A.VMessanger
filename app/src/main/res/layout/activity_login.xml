<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        app:srcCompat="@drawable/logo_no_back"
        android:layout_marginLeft="@dimen/_105sdp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="111dp"
        android:layout_marginTop="@dimen/_30sdp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="@dimen/_35sdp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="sign in to continue"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="EMAIL"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_20sdp"
        android:fontFamily="@font/poppins_bold"/>
    <EditText
        android:id="@+id/editTextLogEmail"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_52sdp"
        android:ems="10"
        android:hint="Enter Your Mail"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_25sdp"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="PASSWORD"
        android:textSize="@dimen/_17sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="@dimen/_20sdp"/>

    <EditText
        android:id="@+id/editTextLogPassword"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_52sdp"
        android:ems="10"
        android:hint="Enter Your Passward"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/Logbutton"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Login"
        android:backgroundTint="#154FE1"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="45dp"
        android:text="Need an account?"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/logsignup"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="30dp"
        android:text="SIGN UP!"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


</LinearLayout>
