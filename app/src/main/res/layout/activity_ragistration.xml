<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8EFA4"
    tools:context=".Ragistration">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="Create New"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilerg0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photocamera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="USERNAME"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/rgusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="20dp"
        android:hint="Enter Your Name"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:text="" />



    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="EMAIL"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/rgemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Mail"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_25sdp"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textSize="@dimen/_17sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="@dimen/_25sdp"/>

    <EditText
        android:id="@+id/rgpassward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:hint="Enter Your Passward"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:inputType="textPassword"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/rgsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="#154FE1"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/rglongin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


</LinearLayout>