<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".splash">

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_150sdp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/av" />

    <TextView
        android:id="@+id/logonameimg"
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_103sdp"
        android:fontFamily="@font/apptext"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="A.VMessanger"
        android:textSize="@dimen/_30sdp" />

    <TextView
        android:id="@+id/ownone"
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="from"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        android:fontFamily="@font/spartan_thin"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_110sdp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/owntwo"
        android:layout_width="@dimen/_315sdp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_18sdp"
        android:fontFamily="@font/spartan_thin"
        android:textColor="#69DC22"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Najim Rana" />
</LinearLayout>